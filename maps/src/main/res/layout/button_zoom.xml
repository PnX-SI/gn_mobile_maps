<?xml version="1.0" encoding="utf-8"?>
<merge
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="48dp"
    android:layout_height="wrap_content"
    tools:parentTag="android.widget.RelativeLayout">

    <ImageButton
        android:id="@android:id/button1"
        android:layout_width="match_parent"
        android:layout_height="32dp"
        android:background="@drawable/zoom_in_background"
        android:layout_marginTop="@dimen/fab_elevation"
        android:layout_marginHorizontal="@dimen/fab_elevation"
        android:contentDescription="@string/button_zoom_in_hint"
        android:elevation="@dimen/fab_elevation"
        android:src="@drawable/ic_zoom_in" />

    <View
        android:id="@android:id/empty"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@android:id/button1"
        android:background="@android:color/transparent" />

    <ImageButton
        android:id="@android:id/button2"
        android:layout_width="match_parent"
        android:layout_height="32dp"
        android:layout_below="@android:id/empty"
        android:background="@drawable/zoom_out_background"
        android:contentDescription="@string/button_zoom_out_hint"
        android:layout_marginBottom="@dimen/fab_elevation"
        android:layout_marginHorizontal="@dimen/fab_elevation"
        android:elevation="@dimen/fab_elevation"
        android:src="@drawable/ic_zoom_out" />

    <TextView
        android:id="@android:id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"
        android:background="@drawable/zoom_text_background"
        android:textColor="@android:color/secondary_text_light"
        android:elevation="@dimen/fab_elevation"
        android:gravity="center"
        android:paddingStart="4dp"
        android:paddingEnd="4dp"
        android:textSize="10sp"
        tools:ignore="SmallSp" />

</merge>